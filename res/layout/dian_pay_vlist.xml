<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:drawingCacheQuality="high"
    android:orientation="horizontal"
    android:padding="8dp" >

    <ImageView
        android:id="@+id/id_payway_itemIcon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="fitXY"
        android:src="@drawable/dian_pay_icon_paytype_alipay" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:layout_toRightOf="@id/id_payway_itemIcon"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/id_payway_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:text="支付宝"
            android:textSize="16sp"
            android:textStyle="bold" />
        
        <TextView
            android:id="@+id/id_payway_name_gk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@id/id_payway_itemIcon"
            android:text="推荐支付宝用户使用"
 			android:textColor="#9D9D9D"
            android:textSize="14sp"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/id_payway_discount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"
        android:background="@drawable/dian_pay_icon_discount"
        android:gravity="center"
        android:text="8折"
        android:textColor="#ffffff"
        android:textSize="14sp"
        android:textStyle="bold" />

</RelativeLayout>